[
  {
    "essential": true,
    "image": "sonatype/nexus3",
    "memoryReservation": 1024,
    "name": "nexus",
    "portMappings": [{
      "containerPort": 8081,
      "hostPort": 8081
    }],
    "dnsServers": [
      "${DNS_SERVER_1}",
      "${DNS_SERVER_2}",
      "${DNS_SERVER_3}"
    ],
    "environment": [
      {
        "name": "SERVICE_NAME",
        "value": "nexus"
      },
      {
        "name": "SERVICE_TAGS",
        "value": "${TAG_REGION},${TAG_VPC_ID}"
      }
    ],
    "mountPoints": [
      {
        "sourceVolume": "nexus-storage",
        "containerPath": "/nexus-data"
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "infrastructure",
        "awslogs-region": "us-west-2",
        "awslogs-stream-prefix": "nexus"
      }
    },
    "dockerLabels": {
      "app_name": "nexus",
      "app_env": "production",
      "app_region": "${TAG_REGION}"
    }
  }
]