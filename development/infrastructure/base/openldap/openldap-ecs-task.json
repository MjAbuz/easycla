[
  {
    "essential": true,
    "image": "osixia/openldap:1.1.8",
    "memoryReservation": 512,
    "name": "openldap",
    "portMappings": [{
      "containerPort": 389,
      "hostPort": 389
    },{
      "containerPort": 636,
      "hostPort": 636
    }],
    "dnsServers": [
      "${DNS_SERVER_1}",
      "${DNS_SERVER_2}",
      "${DNS_SERVER_3}"
    ],
    "hostname": "${LDAP_DOMAIN}",
    "environment": [
      {
        "name": "LDAP_ORGANISATION",
        "value": "${LDAP_ORGANISATION}"
      },
      {
        "name": "LDAP_DOMAIN",
        "value": "${LDAP_DOMAIN}"
      },
      {
        "name": "LDAP_ADMIN_PASSWORD",
        "value": "${LDAP_ADMIN_PASSWORD}"
      },
      {
        "name": "SERVICE_389_NAME",
        "value": "openldap"
      },
      {
        "name": "SERVICE_389_TAGS",
        "value": "${TAG_REGION},${TAG_VPC_ID}"
      }
    ],
    "mountPoints": [
      {
        "sourceVolume": "openldap",
        "containerPath": "/var/lib/ldap"
      },
      {
        "sourceVolume": "openldap-storage",
        "containerPath": "/etc/ldap/slapd.d"
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "infrastructure",
        "awslogs-region": "${TAG_REGION}",
        "awslogs-stream-prefix": "openldap"
      }
    },
    "dockerLabels": {
      "app_name": "openldap",
      "app_env": "sandbox",
      "app_region": "${TAG_REGION}"
    }
  }
]