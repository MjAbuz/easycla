[
  {
    "essential": true,
    "image": "sonatype/nexus3",
    "memoryReservation": 1024,
    "name": "nexus",
    "portMappings": [{
      "containerPort": 8081,
      "hostPort": 8081
    }],
    "dnsServers": [
      "${DNS_SERVER_1}",
      "${DNS_SERVER_2}",
      "${DNS_SERVER_3}"
    ],
    "environment": [
      {
        "name": "SERVICE_NAME",
        "value": "nexus"
      },
      {
        "name": "SERVICE_TAGS",
        "value": "${TAG_REGION},${TAG_VPC_ID}"
      },
      {
        "name": "SERVICE_8081_CHECK_HTTP",
        "value": "/"
      },
      {
        "name": "SERVICE_8081_CHECK_INTERVAL",
        "value": "300s"
      }
    ],
    "mountPoints": [
      {
        "sourceVolume": "nexus-storage",
        "containerPath": "/nexus-data"
      }
    ],
    "logConfiguration": {
      "logDriver": "gelf",
      "options": {
        "gelf-address": "udp://${TAG_REGION}.logstash.service.consul:12201",
        "labels": "app_name,app_env,app_region"
      }
    },
    "dockerLabels": {
      "app_name": "nexus",
      "app_env": "production",
      "app_region": "${TAG_REGION}"
    }
  }
]